{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"],
    "strict": true,
    "incremental": true,
    "declaration": true
  },
  "include": ["src/**/*"]
}
